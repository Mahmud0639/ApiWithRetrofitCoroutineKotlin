<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#22BDFF">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/fragmentTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Main Fragment"
        android:textSize="@dimen/_28font_mdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/goNextBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Next"
        android:textSize="@dimen/_18font_mdp"
        app:layout_constraintTop_toBottomOf="@id/fragmentTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/etData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/goNextBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:hint="Enter data"
        android:background="#F2F2F2"
        android:padding="@dimen/_12mdp"
        app:layout_constraintEnd_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>